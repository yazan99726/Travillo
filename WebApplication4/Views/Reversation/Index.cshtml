@model Tuple<WebApplication4.Models.Trip, IEnumerable<WebApplication4.Models.Image>>
@{
    Layout = null;
    var erromsg = ViewBag.mssg;
    
}
<!DOCTYPE html>

<html>
<head>
  <meta charset="utf-8">
  <meta content="width=device-width, initial-scale=1.0" name="viewport">

  <title>Delicious Bootstrap Template - Index</title>
  <meta content="" name="description">
  <meta content="" name="keywords">
 <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Arizonia&display=swap" rel="stylesheet">
  <!-- Vendor CSS Files -->
  <link href="/yy/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
  <link href="/yy/vendor/glightbox/css/glightbox.min.css" rel="stylesheet">
  <!-- Template Main CSS File -->
  <link href="/yy/css/style.css" rel="stylesheet">
</head>
<body>
    <h1 class="subheading text-center pb-5 pt-5" >Welcome To @Model.Item1.Tripname</h1>
    <span  class="text-danger subheading text-center mb-2">@erromsg</span>
    <section id="gallery" class="gallery">
      <div class="container-fluid">       
        <div class="row no-gutters">
         @foreach (var item in Model.Item2)
        {
            <div class="col-lg-3 col-md-4">
            <div class="gallery-item">
              <a href="@Url.Content("~/image/"+@item.Imagepath)" class="gallery-lightbox">
                 <img src=@Url.Content("~/image/"+@item.Imagepath) asp-append-version="true" class="img-fluid"/>
                @*<img src="/yy/img/gallery/@item.Imagepath" alt="" class="img-fluid">*@
              </a>
            </div>
          </div>
        }
        </div>
      </div>
    </section><!-- End Gallery Section -->

   <div class="container p-0">
    <div class="card px-4">
        <p class="h8 py-3">Payment Details</p>
        <div class="row gx-3">
           <form asp-action="Index">         
            <div class="col-12">             
                <div class="d-flex flex-column">
                    <em class="text mb-1">Visa Type :</em> <input name="ctype" class="form-control mb-3" type="text" placeholder="visa/credit">
                </div>
            </div>
            <div class="col-12">
                <div class="d-flex flex-column">
                    <em class="text mb-1">Card Number :</em> <input name="cnumber" class="form-control mb-3" type="text" placeholder="1234 5678 435678">
                </div>
            </div>
            <div class="col-12">
                <div class="d-flex flex-column">
                    <em class="text mb-1">CVV/CVC  :</em> <input name="ccvv" class="form-control mb-3" type="text" placeholder="CVV/CVC">
                </div>
            </div>
            <div class="col-12">
                <div class="d-flex flex-column">
                    <em class="text mb-1">Expiry Data:</em> <input name="cexpdate" class="form-control mb-3 pt-2 " type="date">
                </div>
            </div>
            <div class="col-12">               
                  <button type="submit" class="btn btn-primary mb-3 ">Submit <span class="fas fa-arrow-right"></span></button>
            </div>
            </form>
        </div>
    </div>
  </div>


 
    



  <script src="/yy/vendor/glightbox/js/glightbox.min.js"></script>
  <script src="/yy/vendor/swiper/swiper-bundle.min.js"></script>

  <!-- Template Main JS File -->
  <script src="/yy/js/main.js"></script>

</body>
</html>
