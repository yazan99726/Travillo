@model WebApplication4.Models.Aboutu

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class=" text-danger ">Details Aboutus</h1>

<div>
  
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
          <textarea cols="18" rows="2" class="form-control" style="border: 3px solid #ccc;">  @Html.DisplayFor(model => model.Description)</textarea>
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Imagepath)
        </dt>
        <dd class = "col-sm-10">
             <img src=@Url.Content("~/image/"+Model.Imagepath) asp-append-version="true" style="border-radius:10% ;width:100px ; height:100px"/>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-info">Edit</a> |
    <a asp-action="Index" class="btn btn-primary">Back to List</a>
</div>
