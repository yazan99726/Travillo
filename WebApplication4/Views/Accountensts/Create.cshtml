@model WebApplication4.Models.Accountenst

@{
    ViewData["Title"] = "Create";
}

<h1 class=" text-danger ">Create Accountenst</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label text-info"></label>
                <input asp-for="Name" class="form-control"  style="border: 3px solid #ccc;"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label text-info"></label>
                <input asp-for="Phone" class="form-control"  style="border: 3px solid #ccc;"/>
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Adress" class="control-label text-info"></label>
                <input asp-for="Adress" class="form-control"  style="border: 3px solid #ccc;"/>
                <span asp-validation-for="Adress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Salary" class="control-label text-info"></label>
                <input asp-for="Salary" class="form-control"  style="border: 3px solid #ccc;"/>
                <span asp-validation-for="Salary" class="text-danger"></span>
            </div>
            <div class="form-group">
			   <label for="username" class="control-label text-info">UserName</label>
			   <input type="text"  id="username" name="username" class="form-control"  style="border: 3px solid #ccc;" required>
		    </div>
            <div class="form-group">
                <label for="username" class="control-label text-info">Password</label>
				<input type="password"  id="password" name="password" class="form-control"  style="border: 3px solid #ccc;" required>
			</div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary mt-2" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index"  class="btn btn-primary">Back to List</a>
</div>

